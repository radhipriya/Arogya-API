package ap.repository;

import java.util.Optional;

import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.CrudRepository;
import org.springframework.data.repository.query.Param;

import ap.entities.OrderDetailsEO;

public interface OrderDetailsRepository extends CrudRepository<ap.entities.OrderDetailsEO,String> {
	
	@Query("INSERT INTO order_details (customer_id, status, total_price) VALUES (:customerId, :status, :totalAmount) RETURNING order_id")
	Optional<OrderDetailsEO> addOrderDetails(@Param("customerId") String customerId, @Param("Status") String status, @Param("totalAmount") Double totalAmount);

}
