package ap.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import ap.entities.EmployeesEO;
import ap.services.Employees;

@RestController
public class EmployeesController {
	@Autowired
	private Employees EmployeesService;
	
	
	@RequestMapping
	public List<EmployeesEO> getAllCustomerDetails()
	{
		return EmployeesService.getAllCustomerDetails();
	}
	
	@RequestMapping(value="/add-cusdetails", method=RequestMethod.POST)
	public void addCustomerDetails(@RequestBody CustomersEO cusEORef)
	{
		EmployeesService.addCustomerDetails(cusEORef);
	}
	
	@RequestMapping(value="/update-cusdetails", method=RequestMethod.PUT)
	public void updateCustomerDetails(@RequestBody CustomersEO cusEORef)
	{
		EmployeesService.updateCustomerDetails(cusEORef);
	}
	
	@RequestMapping(value="/findById-cusdetails/{customerId}", method=RequestMethod.PUT)
	public Optional<CustomersEO> findByCustomerId(@PathVariable String customerId)
	{
		Optional<CustomersEO> custdetails = EmployeesService.findByCustomerId(customerId);
		return custdetails;
	}
	
	@RequestMapping(value="/delete-cusdetails/{customerId}", method=RequestMethod.DELETE)
	public void deleteCustomerDetails(@PathVariable String customerId){
		EmployeesService.deleteCustomerDetails(customerId);
	}


}
