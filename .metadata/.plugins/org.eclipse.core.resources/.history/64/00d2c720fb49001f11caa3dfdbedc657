package ap.util;

import javax.persistence.AttributeConverter;
import javax.persistence.Converter;

@Converter
public class CustomOrderIdConverter implements AttributeConverter<String, String> {

    @Override
    public String convertToDatabaseColumn(String attribute) {
        return attribute.replace("ORD", "");
    }

    @Override
    public String convertToEntityAttribute(String dbData) {
        return "ORD" + String.format("%03d", Integer.parseInt(dbData));
    }
}
